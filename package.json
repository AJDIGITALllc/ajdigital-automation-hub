{
  "name": "ajdigital-automation-hub",
  "version": "1.0.0",
  "description": "Infrastructure and configuration hub for Audio Jones ecosystem",
  "main": "dist/lib/playbooks.js",
  "types": "dist/lib/playbooks.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsc && node dist/server.js",
    "validate:configs": "node scripts/validate-configs.js",
    "validate:router": "tsx scripts/validate-router.ts",
    "validate": "npm run validate:router",
    "governance": "tsc && node dist/scripts/run-governance.js",
    "worker:run": "tsx scripts/run-worker.ts",
    "worker:run:firestore": "cross-env INBOX_DRIVER=firestore tsx scripts/run-worker.ts",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AJDIGITALllc/ajdigital-automation-hub.git"
  },
  "keywords": [
    "automation",
    "config",
    "infrastructure",
    "orchestration",
    "webhooks"
  ],
  "author": "Audio Jones Digital",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "firebase-admin": "^12.7.0",
    "yaml": "^2.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "ajv": "^8.12.0",
    "cross-env": "^10.1.0",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0"
  }
}
